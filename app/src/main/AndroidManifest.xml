<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.guilsch.multivoc">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- Permissions required by GoogleAuthUtil -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_main_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_main_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Multivoc"
        android:usesCleartextTraffic="true">
        <activity android:name=".ActivityMenu"/>
        <activity android:name=".ActivityFirstLaunch" />
        <activity android:name=".ActivityEditCard" />
        <activity android:name=".ActivityNewCard" />
        <activity android:name=".ActivityExplore" />
        <activity android:name=".ActivityLearn" />
        <activity android:name=".ActivitySettings" />
        <activity android:name=".ActivityTrain" />
        <activity android:name=".ActivityTranslation" />
        <activity android:name=".ActivityMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>