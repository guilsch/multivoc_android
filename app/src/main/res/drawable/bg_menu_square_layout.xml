<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

            <corners android:radius="10dp" />

            <gradient
                android:startColor="@color/menu_layouts_bg_on_touch"
                android:endColor="@color/menu_layouts_bg_on_touch"
                android:type="radial"
                android:gradientRadius="10dp"
                android:angle="0"/>
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">

        <corners android:radius="10dp" />

        <gradient
            android:startColor="@color/menu_layouts_bg"
            android:endColor="@color/menu_layouts_bg"
            android:type="radial"
            android:gradientRadius="10dp"
            android:angle="0"/>
        </shape>
    </item>
</selector>