<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/header_height"
        android:layout_marginHorizontal="0dp"
        android:background="@drawable/bg_header"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:background="@drawable/back_layout_selector"
            android:paddingVertical="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:rotation="180"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_chevron_back" />

            <TextView
                android:id="@+id/back_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:gravity="center"
                android:text="@string/button_back_str"
                android:textColor="@color/header_back"
                android:textSize="@dimen/back_text"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/back_arrow"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/body_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/body_horizontal_margin"
        android:layout_marginBottom="@dimen/body_bottom_margin"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ProgressBar
                android:id="@+id/remaining_cards_progress_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:progressDrawable="@drawable/custom_progress_bar"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/cards_left"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/cards_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="7dp"
                android:text="TextView"
                android:textSize="@dimen/N"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/answer_card_bg"
            app:layout_constraintBottom_toTopOf="@+id/horizontal_central_guideline2"
            app:layout_constraintEnd_toStartOf="@+id/right_guideline"
            app:layout_constraintStart_toStartOf="@+id/left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/cards_left">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/separation_guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <TextView
                android:id="@+id/answer_side_item1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom|center_horizontal"
                android:padding="15dp"
                android:text="item1"
                android:textColor="@color/blue3"
                android:textSize="@dimen/XXL"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/separation_guideline"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/speaker_ic"
                android:layout_width="@dimen/ic_size"
                android:layout_height="@dimen/ic_size"
                app:layout_constraintBottom_toTopOf="@+id/answer_side_item1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:srcCompat="@drawable/selector_speaker" />

            <TextView
                android:id="@+id/answer_side_item2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:gravity="center|top"
                android:padding="15dp"
                android:text="TextView"
                android:textColor="@color/blue3"
                android:textSize="@dimen/XXL"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/separation_guideline"
                app:layout_constraintVertical_bias="0.441"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp">

            <life.sabujak.roundedbutton.RoundedButton
                android:id="@+id/answer_side_button1"
                android:layout_width="@dimen/button_ans_width"
                android:layout_height="@dimen/button_ans_height"
                app:buttonCornerRadius="7dp"
                app:buttonGradientEndColor="@color/main"
                app:buttonGradientStartColor="#FF0000"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <life.sabujak.roundedbutton.RoundedButton
                android:id="@+id/answer_side_button2"
                android:layout_width="58dp"
                android:layout_height="@dimen/button_ans_height"
                app:buttonCornerRadius="7dp"
                app:buttonGradientEndColor="#ECB039"
                app:buttonGradientStartColor="@color/main"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/answer_side_button3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/answer_side_button1"
                app:layout_constraintTop_toTopOf="@+id/answer_side_button1" />

            <life.sabujak.roundedbutton.RoundedButton
                android:id="@+id/answer_side_button3"
                android:layout_width="@dimen/button_ans_width"
                android:layout_height="@dimen/button_ans_height"
                app:buttonCornerRadius="7dp"
                app:buttonGradientEndColor="#E0EC39"
                app:buttonGradientStartColor="#ECB039"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/answer_side_button4"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/answer_side_button2"
                app:layout_constraintTop_toTopOf="@+id/answer_side_button1" />

            <life.sabujak.roundedbutton.RoundedButton
                android:id="@+id/answer_side_button4"
                android:layout_width="@dimen/button_ans_width"
                android:layout_height="@dimen/button_ans_height"
                app:buttonCornerRadius="7dp"
                app:buttonGradientEndColor="#3A7C00"
                app:buttonGradientStartColor="#E0EC39"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/answer_side_button1" />

            <ImageView
                android:id="@+id/smiley_iiii"
                android:layout_width="39dp"
                android:layout_height="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/answer_side_button4"
                app:layout_constraintEnd_toEndOf="@+id/answer_side_button4"
                app:layout_constraintStart_toStartOf="@+id/answer_side_button4"
                app:layout_constraintTop_toTopOf="@+id/answer_side_button4"
                app:srcCompat="@drawable/ic_smiling_line_icon" />

            <ImageView
                android:id="@+id/smiley_iii"
                android:layout_width="39dp"
                android:layout_height="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/answer_side_button3"
                app:layout_constraintEnd_toEndOf="@+id/answer_side_button3"
                app:layout_constraintStart_toStartOf="@+id/answer_side_button3"
                app:layout_constraintTop_toTopOf="@+id/answer_side_button3"
                app:srcCompat="@drawable/ic_confused_line_icon" />

            <ImageView
                android:id="@+id/smiley_ii"
                android:layout_width="39dp"
                android:layout_height="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/answer_side_button2"
                app:layout_constraintEnd_toEndOf="@+id/answer_side_button2"
                app:layout_constraintStart_toStartOf="@+id/answer_side_button2"
                app:layout_constraintTop_toTopOf="@+id/answer_side_button2"
                app:srcCompat="@drawable/ic_strange_emoji_icon" />

            <ImageView
                android:id="@+id/smiley_i"
                android:layout_width="39dp"
                android:layout_height="24dp"
                app:layout_constraintBottom_toBottomOf="@+id/answer_side_button1"
                app:layout_constraintEnd_toEndOf="@+id/answer_side_button1"
                app:layout_constraintStart_toStartOf="@+id/answer_side_button1"
                app:layout_constraintTop_toTopOf="@+id/answer_side_button1"
                app:srcCompat="@drawable/ic_crying_line_icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>