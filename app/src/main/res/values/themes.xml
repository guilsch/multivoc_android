<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Multivoc" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_orange1</item>
        <item name="colorPrimaryVariant">@color/main_orange3</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/sec_blue1</item>
        <item name="colorSecondaryVariant">@color/sec_blue3</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/back_ground</item>
        <item name="android:navigationBarColor">@color/back_ground</item>
        <item name="android:windowLightStatusBar">true</item>
<!--        <item name="android:windowLightNavigationBar">true</item>-->

        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/oxygen</item>
        <item name="android:colorEdgeEffect">@color/selected_color_transparent</item>
    </style>

    <style name="OrangeStatusBarTheme" parent="Theme.Multivoc">
        <item name="android:statusBarColor">@color/main_orange1</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="OrangeBothBarsBarTheme" parent="Theme.Multivoc">
        <item name="android:statusBarColor">@color/main_orange1</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/main_orange1</item>
    </style>

    <!--    font-->
    <string name="header_text_size" translatable="false">18</string>

    <style name="Theme.Multivoc.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Multivoc.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Multivoc.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>